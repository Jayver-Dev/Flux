{
    // Lua settings for Roblox exploit scripting
    "Lua.runtime.version": "Lua 5.1",
    "Lua.runtime.special": {
      "require": "require"
    },
    "Lua.diagnostics.globals": [
      "game",
      "workspace",
      "script",
      "Instance",
      "Vector3",
      "CFrame",
      "Ray",
      "UDim2",
      "Enum",
      "Color3",
      "tick",
      "wait",
      "spawn",
      "delay",
      "print",
      "warn",
      "error",
      "shared",
      "getfenv",
      "setfenv",
      "getgenv",
      "setgenv",
      "getrawmetatable",
      "setreadonly",
      "newcclosure",
      "hookfunction",
      "hookmetamethod",
      "firetouchinterest",
      "islclosure",
      "isreadonly",
      "Drawing",
      "RenderStepped",
      "TweenService",
      "Players",
      "RunService",
      "HttpService",
      "LocalPlayer",
      "UserInputService",
      "Camera",
      "loadstring",
      "mousemoverel",
      "mouse1click",
      "mouse1press",
      "mouse1release",
      "mouse2click",
      "mouse2press",
      "mouse2release"
    ],
    "Lua.workspace.library": [],
    
    // Format on save (using Stylua)
    "editor.formatOnSave": true,
  
    // Stylua configuration for better Lua code styling
    "stylua.configPath": ".stylua.toml",
  
    // Bracket Colorizer 2 settings (optional, looks better for nested ESP/Aimbot functions)
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "bracket-pair-colorizer-2.colors": [
      "#FFD700",
      "#DA70D6",
      "#00CED1",
      "#FF4500",
      "#7CFC00"
    ],
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.activeScopeCSS": [
      "borderStyle : solid",
      "borderWidth : 1px",
      "borderColor : {color}",
      "opacity: 0.5"
    ],
    
    // Path Intellisense for faster file requiring
    "path-intellisense.autoSlashAfterDirectory": true,
    "path-intellisense.extensionOnImport": true
  }
  